{
  "name": "rpg-widget",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build:css": "TAILWIND_DISABLE_WATCHER=1 tailwindcss -i ./src/main.css -o ./dist/tailwind.css --minify",
    "build:js": "esbuild ./src/main.tsx --bundle --format=esm --tsconfig=./tsconfig.json --alias:@=./src --outfile=./dist/widget.js",
    "build:widget": "node ./scripts/build-widget.mjs",
    "build": "npm run build:css && npm run build:js && npm run build:widget",
    "storybook": "npm run build:css && storybook dev -p 6006",
    "storybook:build": "npm run build:css && storybook build"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.473.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.0.1"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.5.0",
    "@storybook/react-vite": "^8.5.0",
    "@tailwindcss/cli": "^4.0.0",
    "@tailwindcss/vite": "^4.1.18",
    "esbuild": "^0.25.0",
    "storybook": "^8.5.0",
    "tailwindcss": "^4.0.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "optionalDependencies": {
    "@parcel/watcher-linux-x64-glibc": "^2.5.6",
    "lightningcss-linux-x64-gnu": "^1.30.2",
    "@tailwindcss/oxide-linux-x64-gnu": "^4.1.18"
  }
}
