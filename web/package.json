{
  "name": "rpg-widget",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build:css": "tailwindcss -i ./src/main.css -o ./dist/tailwind.css --minify",
    "build:js": "esbuild ./src/main.tsx --bundle --format=esm --outfile=./dist/widget.js",
    "build:widget": "node ./scripts/build-widget.mjs",
    "build": "npm run build:css && npm run build:js && npm run build:widget",
    "storybook": "npm run build:css && storybook dev -p 6006",
    "storybook:build": "npm run build:css && storybook build"
  },
  "dependencies": {
    "@openai/apps-sdk-ui": "^0.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.5.0",
    "@storybook/react-vite": "^8.5.0",
    "@tailwindcss/cli": "^4.0.0",
    "esbuild": "^0.25.0",
    "storybook": "^8.5.0",
    "tailwindcss": "^4.0.0"
  }
}
